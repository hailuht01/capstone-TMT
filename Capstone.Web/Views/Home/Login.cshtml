
@model Capstone.Web.Models.Login
@section extraCSS {
    <link href="~/Content/css/register-login.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('../../Content/img/Travel6.jpg');
            background-size: cover;
        }
    </style>
}

<div class="form-container row text-light">
    <div class="col-md-3"></div>
    <div class="col-md-6 login-card">
        <form id="loginform" method="post" action="@Url.Action("Login", "Home")">
            <div class="col-lg-12 text-center">
                <h2>Login</h2>
            </div>
            <div style="clear:both;"></div>
            <div class="group">
                @Html.TextBoxFor(m => m.Email, new { id = "Email" })
                <span class="highlight"></span>
                <span class="bar"></span>
                <label><i class="material-icons input-ikon">mail_outline</i><span class="span-input">E-Mail</span></label>
            </div>
            <div class="group">
                @Html.PasswordFor(m => m.Password, new { id = "Password" })
                <span class="highlight"></span>
                <span class="bar"></span>
                <label><i class="material-icons input-password-icon">lock</i><span class="span-input">Password</span></label>
            </div>
            <!-- Kayıt Ol Buton -->
            <button type="submit" name="submitButton" class="kayit-ol-buton text-light">Login</button>
            <a class="text-light" href="@Url.Action("Register", "Home")" style="width:75%; margin: 0 auto !important;">
                Need an account? Click here to Register!
            </a>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>