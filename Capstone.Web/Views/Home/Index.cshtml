@using Capstone.Web.Models
@model FullUserModel

@section extraCss{
    <link href="~/Content/css/Home.css" rel="stylesheet" />
}

<div id="preferred-container" class="row">
    <div class="col">
        <nav class="nav nav-pills nav-fill">
            <a class="nav-item nav-link disabled" href="#">Popular Itineraries:</a>
            <a class="nav-item nav-link" href="#">Museums</a>
            <a class="nav-item nav-link" href="#">Parks</a>
            <a class="nav-item nav-link" href="#">Restaurants</a>
        </nav>
    </div>
</div>

<div id="itinerary-container" class="row">
    <div id="itin-controls" class="col-md-3">
        <h2 class="text-center">My Intineraries</h2>
        <div class="row">
            <div id="itn-form-control" class="col">
                <nav class="nav nav-pills">
                    <a id="new-itn" class="nav-item nav-link btn-warning" href="#">New</a>
                    <a id="save-itn" class="nav-item nav-link btn-success" href="#">Save</a>
                </nav>
            </div>
        </div>


        <div class="row">
            <div class="col">
                @foreach (var itin in Model.Itineraries)
                {
                    <ul>
                        <li>Title: @itin.Title</li>
                        <li>Departure Date: @itin.DepartureDate</li>
                        <li>Created On: @itin.CreationDate</li>
                    </ul>
                    foreach (var landmark in itin.Landmarks)
                    {
                        <ul>
                            <li>@landmark.Name</li>
                            <li>@landmark.Address</li>
                            <li>@landmark.Description</li>
                        </ul>
                    }
                }
            </div>
        </div>
    </div>


    <div id="map-container" class="col-md-9">
        <div id="map">

        </div>
    </div>
</div>

<!--Modal-->
<div class="modal fade" id="landmark-detail" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Cincinnati Museum</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

