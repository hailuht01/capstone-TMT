        </div>
    </div>
</div>

<!--Modal-->



<div class="modal fade" id="landmark-detail" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    @Html.Partial("LandmarkModal", Model.Landmarks)
    </div>
    @section BottomJS{
        <script>
        $('document').ready(function ()
        {
            @foreach (var land in Model.Landmarks)
            {
                   @: AddMarker({ coords: { lat:@land.Latitude, lng:@land.Longtiude}, name: '@land.Name', address: '@land.Address', description: '@land.Description', placeId: "@land.PlaceId" });
            }
    });
        </script>
    }

