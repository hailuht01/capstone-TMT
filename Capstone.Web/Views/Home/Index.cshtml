@using Capstone.Web.Models
@model FullUserModel

@section extraCss{
    <link href="~/Content/css/Home.css" rel="stylesheet" />
}
@section topJS{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCPzAfumWS9n3IJ-PGos47STA1mp4QuLZQ">
    </script>
}

<div id="preferred-container" class="row">
    <div class="col">
        <nav class="nav nav-pills nav-fill">
            <a class="nav-item nav-link disabled" href="#">Popular Itineraries:</a>
            <a class="nav-item nav-link" href="#">Museums</a>
            <a class="nav-item nav-link" href="#">Parks</a>
            <a class="nav-item nav-link" href="#">Restaurants</a>
        </nav>
    </div>
</div>

<div id="itinerary-container" class="row">
    <div id="itin-controls" class="col-md-5">
        <h2 class="text-center">My Intineraries</h2>
        <div class="row">
            <div id="itn-form-control" class="col">
                <nav class="nav nav-pills">
                    <a id="new-itn" class="nav-item nav-link btn-warning" href="#">New</a>
                    <a id="save-itn" class="nav-item nav-link btn-success" href="#">Save</a>
                </nav>
            </div>
        </div>


        <div class="row">
            <div class="col">
                @foreach (var itin in Model.Itineraries)
                {
                    <h4>@itin.Title</h4>
                    if (itin.DepartureDate.HasValue)
                    {
                        <p>Departure Date: @itin.DepartureDate.Value.Month/@itin.DepartureDate.Value.Day/@itin.DepartureDate.Value.Year @itin.DepartureDate.Value.Month, Created On: @itin.CreationDate.Date.Month/@itin.CreationDate.Date.Day/@itin.CreationDate.Date.Year</p>
                    }
                    else
                    {
                        <p>Departure Date: Undecided</p>
                    }

                    foreach (var landmark in itin.Landmarks)
                    {

                        <h5>@landmark.Name</h5>

                    }
                }
            </div>
        </div>
    </div>


    <div id="map-container" class="col-md-7">
        <div id="map">

        </div>
    </div>
</div>

<!--Modal-->
<div class="modal fade" id="landmark-detail" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    @Html.Partial("LandmarkModal")
</div>

@section BottomJS{
    <script>
        $('document').ready(function() {
            @foreach (var itin in Model.Itineraries)
            {
                foreach (var land in itin.Landmarks)
                {
                    @: AddMarker({ coords:{ lat:@land.Latitude, lng:@land.Longtiude}, name: '@land.Name', address:'@land.Address', description:'@land.Description', placeId: "@land.PlaceId" });
                }
            }
        })
    </script>
}