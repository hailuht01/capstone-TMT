
<div class="row">
    <div class="col">
        <form id="itineraryform" method="post" action="@Url.Action("Create", "Itinerary")">

            <label for="Title"><strong>Title</strong></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Title" placeholder="Title" />
            </div>
            <br />
            <label for="description"><strong>Description</strong></label>
            <div class="col-sm-10">
                <textarea type="text" class="form-control" name="Description"></textarea>
            </div>
            <br />
            <label for="Departure date"><strong>Departure Date</strong></label>
            <div class="col-sm-5">
                <input type="date" class="form-control" id="colFormLabel" placeholder="Departure Date">
            </div>
            <br />
            <button type="submit" class="btn btn-success" href="#">Save</button>

        </form>
    </div>

</div>
