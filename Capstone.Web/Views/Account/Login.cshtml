<div id="preferred-container" class="row">
    <div class="col">
        <nav class="nav nav-pills nav-fill">
            <a class="nav-item nav-link disabled" href="#">Popular Itineraries:</a>
            <a class="nav-item nav-link" href="#">Museums</a>
            <a class="nav-item nav-link" href="#">Parks</a>
            <a class="nav-item nav-link" href="#">Restaurants</a>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <h2 title="Bravo! City Tours">Login</h2>
            <form id="loginform" method="post" action="@Url.Action("Login", "Account")">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { id = "Email", @class = "form-control", placeholder = "please enter an email address" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { id = "Password", @class = "form-control", placeholder = "8 charactors, 1 uppercase, 1 lowercase, 1 number" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <br />
                <input class="btn btn-primary" type="submit" name="submitButton" value="Login" />
            </form>
        </div>


    </div>
</div>
